<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_checked="false" android:color="@color/colorText">
        <shape android:shape="rectangle">
            <solid android:color="#4FBF02"/>
            <stroke android:width="1dp"
                android:color="#4FBF02"></stroke>
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_checked="true" android:state_pressed="true" android:state_selected="true" android:color="@color/colorText">
        <shape android:shape="rectangle">
            <solid android:color="#4FBF02"/>
            <stroke android:width="1dp"
                android:color="@color/colorTextDark"></stroke>
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
</selector>