<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PickPeepActivity">

    <TextView
        android:id="@+id/pick_peep_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/font_title"
        android:textSize="35dp"
        android:text="Choise Your Peep!"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/yellow_peep_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/red_peep_layout"
        android:background="@drawable/card_round_outline"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:padding="8dp"
        app:layout_constraintRight_toLeftOf="@+id/yellow_peep_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_peep_title">

        <ImageView
            android:id="@+id/red_peep_illu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/red_peep_illust" />

        <TextView
            android:id="@+id/red_peep_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/font_title"
            android:textSize="20sp"
            android:gravity="center"
            android:text="빨간 병아리" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yellow_peep_layout"
        android:background="@drawable/card_round_outline"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@id/red_peep_layout"
        app:layout_constraintRight_toLeftOf="@id/blue_peep_layout"
        app:layout_constraintTop_toBottomOf="@id/pick_peep_title">

        <ImageView
            android:id="@+id/yellow_peep_illu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/peep_illust" />

        <TextView
            android:id="@+id/yellow_peep_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_title"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="노란 병아리" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blue_peep_layout"
        android:background="@drawable/card_round_outline"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@id/yellow_peep_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_peep_title">

        <ImageView
            android:id="@+id/blue_peep_illu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/blue_peep_illust" />

        <TextView
            android:id="@+id/blue_peep_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_title"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="파란 병아리" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/green_peep_layout"
        android:background="@drawable/card_round_outline"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pigeon_layout"
        app:layout_constraintTop_toBottomOf="@id/red_peep_layout">

        <ImageView
            android:id="@+id/green_peep_illu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/green_peep_illust" />

        <TextView
            android:id="@+id/green_peep_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_title"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="초록 병아리" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pigeon_layout"
        android:background="@drawable/card_round_outline"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@id/green_peep_layout"
        app:layout_constraintRight_toLeftOf="@id/w_peep_layout"
        app:layout_constraintTop_toBottomOf="@id/yellow_peep_layout">

        <ImageView
            android:id="@+id/pg_peep_illu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/pigeon_illust" />

        <TextView
            android:id="@+id/pigeon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_title"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="비둘기" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/w_peep_layout"
        android:background="@drawable/card_round_outline"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@id/pigeon_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue_peep_layout">

        <ImageView
            android:id="@+id/w_peep_illu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/pigeon_illust" />

        <TextView
            android:id="@+id/w_peep_title"
            android:fontFamily="@font/font_title"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="뱁새" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:background="@drawable/yellow_btn"
        android:fontFamily="@font/font_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pigeon_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>